@model BusinessModel.Models.FiltrosConsultaCarga
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Ajax.BeginForm(" ", " ", null, null, null))
{
  @Html.HiddenFor(m=>m.idDeCarga)
<div>
    <div class="row justify-content-sm-center">
        <div class="col-sm-3 col-form-label label">Registros correctos:</div>
        <div class="col-sm-3 info">
            @Html.CheckBoxFor(m => m.registrosCorrectos, new { Style = "margin-top: 10px;" })
        </div>
    </div>
    <div class="row justify-content-sm-center">
        <div class="col-sm-3 col-form-label label">Registros con advertencias:</div>
        <div class="col-sm-3 info">
            @Html.CheckBoxFor(m => m.registrosConObservavion, new { Style = "margin-top: 10px;" })
        </div>
    </div>
    <div class="row justify-content-sm-center">
        <div class="col-sm-3 col-form-label label">Registros con error:</div>
        <div class="col-sm-3 info">
            @Html.CheckBoxFor(m => m.registrosConError, new { Style = "margin-top: 10px;" })
        </div>
    </div>
</div>
}

