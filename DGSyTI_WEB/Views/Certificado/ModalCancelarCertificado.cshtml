@model DGSyTI_WEB.Models.MonitoreoSEPViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Ajax.BeginForm("CancelarCertificadoSEP", "Certificado", Model, new AjaxOptions
{

    HttpMethod = "POST",
    OnBegin = "$q('#divLoading').show()",
    OnSuccess = "onSuccessCancelado"
}, new { id = "formCancelarRegistro" }))
{
    @Html.HiddenFor(c => c.sIdDocumento, new { })
    <div class="row">
        <div class="col-sm-3 etiqueta labelObligatorio">Observaciones:</div>
        <div class="col-sm-7">
            @Html.TextAreaFor(c => c.sObservaciones, new { Style = "height: 86px;" })
            @Html.ValidationMessageFor(c => c.sObservaciones)
        </div>
    </div>
}

