@model CertificadosEletronicosMS.Models.CriteriosBusquedaViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Ajax.BeginForm(" ", " ", null, null, null))
{
<div>

    <div class="row justify-content-sm-center">
        <div class="col-sm-1 col-form-label label">Plan de estudios:</div>
        <div class="col-sm-3 info">
            @Html.ListBoxFor(c => c.comboPlanEstudios, Model.comboPlanEstudios, new { Style = "min-height: 29px;" })
        </div>
    </div>
    <div class="row justify-content-sm-center">
        <div class="col-sm-1 col-form-label label">Tipo de certificado:</div>
        <div class="col-sm-3 info" style="min-height: 29px;">
            @Html.ListBoxFor(c => c.comboTipoDocumento, Model.comboTipoDocumento, new { Style = "min-height: 29px;" })
        </div>
    </div>
    <div class="row justify-content-sm-center">
        <div class="col-sm-1 col-form-label label">Número de control:</div>
        <div class="col-sm-3 info">
            @Html.TextAreaFor(c => c.folioControl, new { placeholder = "Para ingresar más de un número de control separar con una coma." })
            @Html.ValidationMessageFor(c => c.folioControl)
        </div>
    </div>
    <div class="row justify-content-sm-center">
        <div class="col-sm-1 col-form-label label">CURP:</div>
        <div class="col-sm-3 info">
            @Html.TextAreaFor(c => c.curp, new { placeholder = "Para ingresar más de una CURP separar con una coma." })
            @Html.ValidationMessageFor(c => c.curp)
        </div>
    </div>
    <div class="row justify-content-sm-center">
        <div class="col-sm-1 col-form-label label">Nombre:</div>
        <div class="col-sm-3 info">
            @Html.TextBoxFor(c=>c.nombreFiltro, new { placeholder = "Ingrese nombre o apellidos." })
            @Html.ValidationMessageFor(c => c.nombreFiltro)
        </div>
    </div>
</div>
}
 
   
