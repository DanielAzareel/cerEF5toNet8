<script type="text/javascript">
        function getFiltros() {
            var tincNombre = $q("#tincNombre").val();
            var tIncAbreviatura = $q("#tIncAbreviatura").val();
           
            estado = "-1";
            if ($q("input:radio[name=chkEstatus]:checked").val() == 1) {
                estado = "1";
            } else if ($q("input:radio[name=chkEstatus]:checked").val() == 2) {
                estado = "2";
            }
            return {
                tincNombre: tincNombre,
                tIncAbreviatura: tIncAbreviatura,               
                idEstatus: estado
            }
        }

        function creaCriterios() {
            var estatus = "Todos";
            if ($q("input:radio[name=chkEstatus]:checked").val() == 1) {
                estatus = "Activos";
            } else if ($q("input:radio[name=chkEstatus]:checked").val() == 2) {
                estatus = "Inactivos";
            }
            var html = "";


            html = "<table style=\"text-align:right; display:block\"><tr><td class=\"label\">Nombre</td><td class=\"info\">" + $q("#tincNombre").val()
                + "</td></tr><tr><td class=\"label\">Clave</td><td class=\"info\">" + $q("#tIncAbreviatura").val()
                + "</td></tr><tr><td class=\"label\">Estatus</td><td class=\"info\">" + estatus + "</td></tr></table>";

           // $q("#tblCriterios").html(html);
        }

</script>

